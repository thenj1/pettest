generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  VISITED
  NOT_VISITED
  OWNER_NOT_PRESENT
}

enum TypeStatus {
  AGENT
  MANAGER
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  password String
  type  TypeStatus @default(AGENT)
  createdAt DateTime @default(now())

  houses    House[]
  inspections Inspection[]
}

model House {
  id    Int @id @default(autoincrement())
  ownerName String?
  address String
  number String
  createdAt DateTime @default(now())


  agentId Int?
  agent User? @relation(fields: [agentId], references: [id])

  inspections Inspection[]
}

model Inspection {
  id Int @id @default(autoincrement())
  worms Boolean
  lastVisit DateTime @default(now())
  createdAt DateTime @default(now())
  status Status 

  houseId Int
  house House @relation(fields: [houseId], references: [id])

  agentId Int
  agent User @relation(fields: [agentId], references: [id])
}